/* 卡片 */

.daily-card {
  margin: 20rpx 20rpx;
}

.price-content {
  -moz-box-shadow: 0px 0rpx 10rpx rgba(0, 0, 0, 0.2);
  -webkit-box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.2);
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
}

.price-content-item {
  padding: 20rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-content-item-left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-content-item-left .icon {
  width: 65rpx;
  height: 65rpx;
  font-size: 40rpx;
  text-align: center;
  line-height: 65rpx;
  color: #fff;
  margin-right: 20rpx;
  border-radius: 50%;
  background-color: rgb(3, 165, 122);
}

.price-content-item-left .data {
}

.price-content-item-left .data .time {
  font-size: 23rpx;
  color: #adaeae;
}

.price-content-item-right {
  font-weight: bold;
  color: rgb(3, 165, 122);
}
